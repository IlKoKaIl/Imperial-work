	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics},
	annote = {Comment: 17 pages, 13 figures + appendix. To be submitted to MNRAS. Comments are welcome!},
	file = {Preprint PDF:C\:\\Users\\Mihir Koka\\Zotero\\storage\\H5H73X8U\\Halder et al. - 2026 - pop-cosmos Redshifts and physical properties of KiDS-1000 galaxies.pdf:application/pdf;Snapshot:C\:\\Users\\Mihir Koka\\Zotero\\storage\\AYA7E2KY\\2602.html:text/html},
